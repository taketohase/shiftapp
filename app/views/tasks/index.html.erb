<div class="main">
  <div class="container">
    <div class="heading">
      募集中一覧
    </div>
    <% if @current_user.class == Owner %>
      <div class="new-task-btn-wrapper">
        <%= link_to("新規作成", new_task_path, class:"btn new-task-btn") %>
      </div>
    <% end %>
    <div class="tasks-index-wrapper">
      <% if @tasks.empty? %>
        <p>
          募集中の物はありません
        </p>
      <% else %>
        <% @tasks.each do |task| %>
          <div class="task-wrapper">
            <%= link_to(task.title, task_path(task), {class: "task-title"}) %>
            <p>作成者：<%= Owner.find(task.owner_id).name %></p>
            <p>期間：<%= Entry.date_y_to_string(task.from_date) %>～<%= Entry.date_y_to_string(task.to_date) %></p>
            <p>期限：<%= Entry.date_y_to_string(task.deadline) %></p>
            <p>コメント：<%= task.comment %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
